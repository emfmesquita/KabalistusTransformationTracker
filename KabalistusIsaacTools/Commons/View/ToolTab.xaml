<TabItem x:Class="KabalistusIsaacTools.Commons.View.ToolTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KabalistusIsaacTools.Commons.View"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100">
    <TabItem.Header>
        <Grid>
            <Image x:Name="Icon" Width="16" HorizontalAlignment="Left"/>
            <Label x:Name="Label" Margin="16,0,12,0"/>
            <Button x:Name="ToExternalButton"  Width="12" Height="12" HorizontalAlignment="Right" ToolTip="To External Window">
                <Image Width="8" Source="../../Images/Icons/external.png"/>
            </Button>
        </Grid>
    </TabItem.Header>
    <Grid x:Name="MainGrid"></Grid>
</TabItem>