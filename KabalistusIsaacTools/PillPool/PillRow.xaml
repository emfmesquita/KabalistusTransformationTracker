<UserControl x:Class="KabalistusIsaacTools.PillPool.PillRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KabalistusIsaacTools.PillPool"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <Grid Height="28">
        <Image x:Name="PillImage" HorizontalAlignment="Left" VerticalAlignment="Center" Width="24" Margin="4,2,0,2"/>
        <Label x:Name="PillLabel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="28,0,0,0"/>
    </Grid>
</UserControl>
