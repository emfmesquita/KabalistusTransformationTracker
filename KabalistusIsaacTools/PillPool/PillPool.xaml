<UserControl x:Class="KabalistusIsaacTools.PillPool.PillPool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KabalistusIsaacTools.PillPool"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
            <StackPanel  Orientation="Vertical">
                <StackPanel x:Name="PillPanel" Orientation="Vertical">
                </StackPanel>
                <StackPanel x:Name="LastPillPanel" Visibility="Hidden" Orientation="Vertical">
                    <Label Content="Last Pill Taken" FontWeight="Bold"/>
                    <local:PillRow x:Name="LastPill"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
